# -----------------------------------------------------------------------------
# Copy this file to .env and fill in values. Never commit .env to git.
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
BASEPATH=
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=https://demos.pixinvent.com/materialize-nextjs-admin-template/documentation

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js – session only; auth API is Laravel)
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000/api/auth
NEXTAUTH_SECRET=generate-a-random-secret-with-openssl-rand-base64-32

# Google OAuth 2.0 (optional – https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Laravel API (backend)
# Local:  http://127.0.0.1:8000  (e.g. php artisan serve in ojjorentals-lara)
# Production: https://ojjorentals.eavisualarts.org  (no trailing slash)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000
API_URL=http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Mapbox (optional – for maps)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=
